@model IEnumerable<PianoUserVoice.Core.Songs.Models.SongDto>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <p></p>
    <div class="col-md-8">
        @foreach (var song in Model)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        @song.Title
                        <span class="label label-info pull-right">@song.Status</span>
                    </h3>                    
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="well well-sm text-center">
                                Votes
                                <h4><strong>@song.Votes</strong></h4>
                        </div>
                    </div>
                    <div class="col-md-10">
                        @song.Description
                    </div>
                </div>

            </div>
        </div>
        }
    </div>
</div>
